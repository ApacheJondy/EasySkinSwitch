<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f5f5f8">

    <com.youth.banner.Banner
        android:id="@+id/fra_home_banner"
        android:layout_width="match_parent"
        android:layout_height="203dp"
        app:banner_indicator_marginBottom="23dp"
        app:banner_indicator_normal_color="#dddedb"
        app:banner_indicator_normal_width="8dp"
        app:banner_indicator_selected_color="#225de8"
        app:banner_indicator_selected_width="8dp"
        app:banner_indicator_space="10dp"
        app:banner_loop_time="5000" />

    <ImageView
        android:layout_width="23dp"
        android:layout_height="22dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="34dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/fra_home_iv"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/fra_home_banner"
        android:scaleType="centerCrop"
        android:src="@drawable/other_banner2" />

    <LinearLayout
        android:id="@+id/fra_home_body_ll"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/fra_home_iv"
        android:layout_marginTop="3dp"
        android:background="@drawable/other_banner4"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fra_home_body_jinjing_tv"
            android:layout_width="150dp"
            android:layout_height="100dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:layout_below="@id/fra_home_body_ll"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp">

        <com.youth.banner.Banner
            android:id="@+id/fra_home_banner2"
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:background="@drawable/common_light_black_shape"
            app:banner_indicator_normal_color="#dddedb"
            app:banner_indicator_normal_width="8dp"
            app:banner_indicator_selected_color="#225de8"
            app:banner_indicator_selected_width="8dp"
            app:banner_indicator_space="10dp"
            app:banner_loop_time="5000" />

        <com.youth.banner.indicator.CircleIndicator
            android:id="@+id/indicator"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/fra_home_banner2"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp" />
    </LinearLayout>

</RelativeLayout>